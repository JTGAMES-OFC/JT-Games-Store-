    <script>
        /* =================================== */
        /* CÓDIGO JAVASCRIPT          */
        /* =================================== */

        function changeImage(imageSrc, clickedThumbnail) {
            // Pega o elemento da imagem principal
            const mainImage = document.getElementById('main-image');
            
            // Adiciona um efeito de fade out
            mainImage.style.opacity = 0;

            // Espera a transição terminar para trocar a imagem e dar fade in
            setTimeout(() => {
                mainImage.src = imageSrc;
                mainImage.style.opacity = 1;
            }, 300); // O tempo deve ser igual ao da transição no CSS

            // Lógica para destacar a miniatura ativa
            const thumbnails = document.querySelectorAll('.thumbnail');
            thumbnails.forEach(thumb => {
                // Remove a classe 'active' de todas as miniaturas
                thumb.classList.remove('active');
            });

            // Adiciona a classe 'active' apenas na miniatura que foi clicada
            clickedThumbnail.classList.add('active');
        }
    </script>
